<div class="container">
    <div class="row">
        <!--picture of a burger-->
        <img class="mx-auto" src="./assets/img/burger1.png" alt="Burger">
    </div>
    <div class="row">
        <div class="mx-auto my-2 title">EAT-DA-BURGER!</div>
    </div>
    <div class="row">
        <div class="col">
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> eaten/burger-block devoured=false}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col">
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> eaten/burger-block devoured=true}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row mx-auto my-3">
        <form class="create-form">
            <div class="form-group">
                <label for="text" class="mx-auto info">Type the burger you like to eat and then click "SUBMIT"</label>
                <input type="text" id="text" name="burger_name">
            </div>
            <div class="form-group" id="hide">
                <label for="devoured">Devoured Yet?</label>
                <input type="radio" name="devoured" value="0" checked>Not Devoured!<br>
                <input type="radio" name="devoured" value="1">Devoured
            </div>

            <button type="submit" class="btn btn-primary mx-auto my-2 submit">Submit</button>
        </form>
    </div>