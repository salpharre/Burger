<div class="container">
    <div class="row">
        <!--picture of a burger-->
        <img class="mx-auto" src="./assets/img/burger1.png" alt="Burger">
    </div>
    <div class="row">
        <div class="mx-auto my-2 title">EAT-DA-BURGER!</div>
    </div>
    <!--where burger-block.handlebars are inserted-->
    <div class="row">
        <div class="col">
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> eaten/burger-block devoured=false}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col">
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> eaten/burger-block devoured=true}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row mx-auto my-3 justify-content-center">
        <form class="create-form">
            <div class="form-group mx-auto">
                <div class="row justify-content-center">
                    <!--Instructions for user-->
                    <label for="text" class="info">Type the burger you like to eat and then click "SUBMIT"</label>
                </div>
                <div class="row justify-content-center">
                    <input type="text" id="text" name="burger_name">
                </div>
            </div>
            <div class="row justify-content-center">
                <button type="submit" class="btn btn-primary submit">Submit</button>
            </div>
            <!--Use value "0" for api routes, otherwise it is hidden from user-->
            <div class="form-group" id="hide">
                <label for="devoured">Devoured Yet?</label>
                <input type="radio" name="devoured" value="0" checked>Not Devoured!<br>
                <input type="radio" name="devoured" value="1">Devoured
            </div>
        </form>
    </div>